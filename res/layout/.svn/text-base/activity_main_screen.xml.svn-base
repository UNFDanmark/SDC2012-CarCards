<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/farrarif430scuderia1"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/titelText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:text="Car Cards"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#FF0000"
        android:textSize="50dp" />

    <Button
        android:id="@+id/findGameButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:text="Start Bluetooth Game" />

    <Button
        android:id="@+id/playOfflineButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_large"
        android:text="Play Offline" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_large" >

        <Button
            android:id="@+id/start_server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.44"
            android:text="Create Game" />

        <Button
            android:id="@+id/start_client"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.44"
            android:text="Join Game" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.94"
        android:orientation="vertical" >
    </LinearLayout>

    <Button
        android:id="@+id/instructionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Instructions" />

    <TextView
        android:id="@+id/madeByText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|center_horizontal|center_vertical"
        android:text="Made by Groupe D at SDC 2012  "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#0DFF00"
        android:textSize="10dp" />

</LinearLayout>